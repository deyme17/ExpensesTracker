#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import dp kivy.metrics.dp
#:import Clock kivy.clock.Clock
#:import Animation kivy.animation.Animation

# color scheme
#:set primary_color get_color_from_hex('#FF7043')
#:set secondary_color get_color_from_hex('#0F7055')
#:set accent_color get_color_from_hex('#FFB74D')
#:set bg_color get_color_from_hex('#062925')
#:set text_light get_color_from_hex('#FFFFFF')
#:set text_dark get_color_from_hex('#212121')
#:set hint_color get_color_from_hex('#B0BEC5')
#:set card_color get_color_from_hex('#0A4035')
#:set error_color get_color_from_hex('#F44336')
#:set success_color get_color_from_hex('#66BB6A')

<FancyTextInput@TextInput>:
    background_color: 0, 0, 0, 0
    foreground_color: text_light
    hint_text_color: hint_color
    cursor_color: primary_color
    multiline: False
    padding: [dp(15), dp(12), dp(15), dp(10)]
    font_size: '16sp'
    
    canvas.before:
        Color:
            rgba: card_color[0]+0.05, card_color[1]+0.05, card_color[2]+0.05, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(8)]
        
        Color:
            rgba: primary_color if self.focus else (hint_color[0], hint_color[1], hint_color[2], 0.5)
        Rectangle:
            pos: self.x + dp(10), self.y + dp(5)
            size: self.width - dp(20), dp(2) if self.focus else dp(1)

<GlowButton@Button>:
    background_color: 0, 0, 0, 0
    color: text_light
    font_size: '18sp'
    bold: True
    
    canvas.before:
        Color:
            rgba: primary_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(10)]
            
        Color:
            rgba: accent_color[0], accent_color[1], accent_color[2], 0.2
        RoundedRectangle:
            pos: self.x - dp(2), self.y - dp(2)
            size: self.width + dp(4), self.height + dp(4)
            radius: [dp(12)]
    
    on_press: 
        self.background_color = 0, 0, 0, 0.1
        Animation(background_color=(0, 0, 0, 0), d=0.3).start(self)
    
<AnimatedBackground@Widget>:
    canvas.before:
        Color:
            rgba: bg_color
        Rectangle:
            pos: self.pos
            size: self.size
        
        Color:
            rgba: secondary_color[0], secondary_color[1], secondary_color[2], 0.15
        Ellipse:
            pos: self.center_x - self.width*0.75, self.center_y - self.height*0.75
            size: self.width*1.5, self.height*1.5
    
<LoginScreen>:
    email_input: email_input
    password_input: password_input
    error_label: error_label
    login_button: login_button
    
    AnimatedBackground:
        id: animated_bg
        size_hint: 1, 1
    
    Button:
        text: '<'
        size_hint: None, None
        size: dp(44), dp(44)
        pos_hint: {'x': 0.03, 'top': 0.97}
        background_color: 0, 0, 0, 0
        on_press: root.go_back()
        
        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.15
            Ellipse:
                pos: self.pos
                size: self.size
                
        Label:
            pos: self.parent.pos
            size: self.parent.size
            font_size: '24sp'
            color: text_light
    
    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: dp(320), dp(450)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        padding: dp(25)
        spacing: dp(20)
        
        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.05
            RoundedRectangle:
                pos: self.x - dp(5), self.y - dp(5)
                size: self.width + dp(10), self.height + dp(10)
                radius: [dp(20)]
                
            Color:
                rgba: 0, 0, 0, 0.03
            RoundedRectangle:
                pos: self.x - dp(10), self.y - dp(10)
                size: self.width + dp(20), self.height + dp(20)
                radius: [dp(20)]
                
            Color:
                rgba: card_color
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [dp(20)]
                
            Color:
                rgba: 1, 1, 1, 0.05
            Line:
                rounded_rectangle: [self.x, self.y, self.width, self.height, dp(20)]
                width: 1
        
        Image:
            source: 'resourses\images\logo.png'
            size_hint: None, None
            size: dp(120), dp(120)
            pos_hint: {'center_x': 0.5}
            allow_stretch: True
            keep_ratio: True
            opacity: 0
            
            on_kv_post:
                Animation(opacity=1, d=1.0).start(self)
        
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(60)
            spacing: dp(5)
            
            Label:
                text: 'Авторизація'
                font_size: '28sp'
                color: text_light
                bold: True
                size_hint_y: None
                height: dp(40)
                
            Widget:
                size_hint: None, None
                size: dp(50), dp(3)
                pos_hint: {'center_x': 0.5}
                canvas:
                    Color:
                        rgba: primary_color
                    Rectangle:
                        pos: self.pos
                        size: self.size
        
        FancyTextInput:
            id: email_input
            hint_text: 'Email'
            size_hint_y: None
            height: dp(60)
            
        FancyTextInput:
            id: password_input
            hint_text: 'Пароль'
            password: True
            size_hint_y: None
            height: dp(60)
        
        Label:
            id: error_label
            text: root.error_message
            color: error_color
            font_size: '14sp'
            size_hint_y: None
            height: dp(30)
            opacity: root.show_error
        
        GlowButton:
            id: login_button
            text: 'Увійти'
            size_hint_y: None
            height: dp(50)
            on_press: root.login()
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(30)
            spacing: dp(10)
            
            Widget:
                size_hint_x: 0.1
            
            Label:
                text: 'Забули пароль?'
                font_size: '14sp'
                color: hint_color
                size_hint_x: 0.4
                halign: 'right'
                valign: 'middle'
                text_size: self.size
            
            Label:
                text: 'Реєстрація'
                font_size: '14sp'
                color: accent_color
                underline: True
                size_hint_x: 0.4
                halign: 'left'
                valign: 'middle'
                text_size: self.size
                on_touch_down: 
                    if self.collide_point(*args[1].pos): root.go_to_registration()
                    
            Widget:
                size_hint_x: 0.1